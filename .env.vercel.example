# Environment variables for Vercel deployment (Production)
# NOTE: Do NOT use localhost for DB on Vercel. Use a publicly accessible MySQL.

DB_TYPE=mysql
DB_HOST=your-db-hostname-or-ip
DB_PORT=3306
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=skincare_recommendation

# Flask settings
SECRET_KEY=replace-with-strong-secret
FLASK_DEBUG=False

# Optional SSL if your MySQL requires it
# DB_USE_SSL=true
# DB_SSL_CA=/path/to/ca.pem

# Recommendation engine settings (defaults are fine)
# KNN_K_VALUE=3
# MAX_RECOMMENDATIONS=10